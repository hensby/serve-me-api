{
  "routes": [
    {
      "method": "GET",
      "path": "/orders",
      "handler": "order.find",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/orders/count",
      "handler": "order.count",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/orders/:id",
      "handler": "order.findOne",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/orders",
      "handler": "order.create",
      "config": {
        "policies": [
          "write",
          "create"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/orders/:id",
      "handler": "order.update",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/orders/:id",
      "handler": "order.delete",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/order/bid",
      "handler": "order.bid",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/order/accept",
      "handler": "order.accept",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/order/confirm",
      "handler": "order.confirm",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/order/pay",
      "handler": "order.pay",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/order/finish",
      "handler": "order.finish",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/order/complete",
      "handler": "order.complete",
      "config": {
        "policies": []
      }
    }
  ]
}
