{
  "routes": [
    {
      "method": "GET",
      "path": "/bids",
      "handler": "bid.find",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/bids/count",
      "handler": "bid.count",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/bids/:id",
      "handler": "bid.findOne",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/bids",
      "handler": "bid.create",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/bids/:id",
      "handler": "bid.update",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/bids/:id",
      "handler": "bid.delete",
      "config": {
        "policies": [
          "write"
        ]
      }
    }
  ]
}
