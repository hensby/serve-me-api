{
  "routes": [
    {
      "method": "GET",
      "path": "/reviews",
      "handler": "review.find",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/reviews/count",
      "handler": "review.count",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/reviews/:id",
      "handler": "review.findOne",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/reviews",
      "handler": "review.create",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/reviews/:id",
      "handler": "review.update",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/reviews/:id",
      "handler": "review.delete",
      "config": {
        "policies": [
          "write"
        ]
      }
    }
  ]
}
