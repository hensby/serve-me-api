{
  "routes": [
    {
      "method": "GET",
      "path": "/addresses",
      "handler": "address.find",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/addresses/count",
      "handler": "address.count",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/addresses/:id",
      "handler": "address.findOne",
      "config": {
        "policies": [
          "read"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/addresses",
      "handler": "address.create",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/addresses/:id",
      "handler": "address.update",
      "config": {
        "policies": [
          "write"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/addresses/:id",
      "handler": "address.delete",
      "config": {
        "policies": [
          "write"
        ]
      }
    }
  ]
}
